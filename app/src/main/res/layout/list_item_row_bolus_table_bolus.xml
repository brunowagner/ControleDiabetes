                    android:id="@+id/tv_meal_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lines="2"
                    android:textStyle="bold"
                    android:text="Café da manhã"/>

                <TextView
                    android:id="@+id/tv_insulin_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="3.0"/>
            </LinearLayout>

